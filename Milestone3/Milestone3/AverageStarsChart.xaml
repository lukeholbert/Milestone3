<Window x:Class="Milestone3.AverageStarsChart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milestone3"
        xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        mc:Ignorable="d"
        Title="AverageStarsChart" Height="504" Width="740">
    <Grid>
        <chartingToolkit:Chart Name="AverageStarsGraph" HorizontalAlignment="Left" Margin="10,10,0,0" Title="Average Number of Stars per Category in the Zipcode" VerticalAlignment="Top" Height="440" Width="700">
            <chartingToolkit:Chart.DataContext>
                <PointCollection>1,10 2,20 3,30 4,40</PointCollection>
            </chartingToolkit:Chart.DataContext>
            <chartingToolkit:ColumnSeries HorizontalAlignment="Left" Height="350" VerticalAlignment="Top" Width="575" Title="Average # of Stars" DependentValuePath="Value" IndependentValuePath="Key" ItemsSource="{Binding}"/>
        </chartingToolkit:Chart>
    </Grid>
</Window>
